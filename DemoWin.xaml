<Window x:Class="PhobosDemo.DemoWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:PhobosDemo"
        mc:Ignorable="d"
        Title="DemoWin" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <!-- ============================================================ -->
            <!-- 前景色 (5级) - Foreground                                      -->
            <!-- ============================================================ -->
            <!-- Foreground1: 最亮/主要文字 -->
            <!-- 不要在窗口/资源文件中声明这些资源变量, 直接使用 DynamicResource 即可-->
            <Color x:Key="Foreground1Color">#FFFFFF</Color>
            <SolidColorBrush x:Key="Foreground1Brush" Color="#FFFFFF"/>

            <!-- Foreground2: 次要文字 -->
            <Color x:Key="Foreground2Color">#E0E0E0</Color>
            <SolidColorBrush x:Key="Foreground2Brush" Color="#E0E0E0"/>

            <!-- Foreground3: 辅助文字 -->
            <Color x:Key="Foreground3Color">#A0A0A0</Color>
            <SolidColorBrush x:Key="Foreground3Brush" Color="#A0A0A0"/>

            <!-- Foreground4: 禁用/占位文字 -->
            <Color x:Key="Foreground4Color">#707070</Color>
            <SolidColorBrush x:Key="Foreground4Brush" Color="#707070"/>

            <!-- Foreground5: 最暗/提示文字 -->
            <Color x:Key="Foreground5Color">#505050</Color>
            <SolidColorBrush x:Key="Foreground5Brush" Color="#505050"/>

            <!-- ============================================================ -->
            <!-- 背景色 (5级) - Background                                      -->
            <!-- ============================================================ -->
            <!-- Background1: 最深/主背景 -->
            <Color x:Key="Background1Color">#0A0A0A</Color>
            <SolidColorBrush x:Key="Background1Brush" Color="#0A0A0A"/>

            <!-- Background2: 次级背景 -->
            <Color x:Key="Background2Color">#141414</Color>
            <SolidColorBrush x:Key="Background2Brush" Color="#141414"/>

            <!-- Background3: 卡片/表面 -->
            <Color x:Key="Background3Color">#1E1E1E</Color>
            <SolidColorBrush x:Key="Background3Brush" Color="#1E1E1E"/>

            <!-- Background4: 悬停背景 -->
            <Color x:Key="Background4Color">#2A2A2A</Color>
            <SolidColorBrush x:Key="Background4Brush" Color="#2A2A2A"/>

            <!-- Background5: 最浅/边框背景 -->
            <Color x:Key="Background5Color">#363636</Color>
            <SolidColorBrush x:Key="Background5Brush" Color="#363636"/>

            <!-- ============================================================ -->
            <!-- 主题色 - Primary                                               -->
            <!-- ============================================================ -->
            <Color x:Key="PrimaryColor">#1E90FF</Color>
            <SolidColorBrush x:Key="PrimaryBrush" Color="#1E90FF"/>

            <Color x:Key="PrimaryHoverColor">#3AA0FF</Color>
            <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#3AA0FF"/>

            <Color x:Key="PrimaryPressedColor">#0D7AE5</Color>
            <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#0D7AE5"/>

            <Color x:Key="PrimaryDisabledColor">#1E90FF60</Color>
            <SolidColorBrush x:Key="PrimaryDisabledBrush" Color="#1E90FF60"/>

            <!-- ============================================================ -->
            <!-- 状态色 - Status                                                -->
            <!-- ============================================================ -->
            <Color x:Key="SuccessColor">#4CAF50</Color>
            <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>

            <Color x:Key="WarningColor">#FF9800</Color>
            <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>

            <Color x:Key="DangerColor">#F44336</Color>
            <SolidColorBrush x:Key="DangerBrush" Color="#F44336"/>

            <Color x:Key="InfoColor">#00BCD4</Color>
            <SolidColorBrush x:Key="InfoBrush" Color="#00BCD4"/>

            <!-- ============================================================ -->
            <!-- 备选色 (6个) - Accent                                          -->
            <!-- ============================================================ -->
            <!-- Accent1: 红色系 -->
            <Color x:Key="Accent1Color">#FF6B6B</Color>
            <SolidColorBrush x:Key="Accent1Brush" Color="#FF6B6B"/>

            <!-- Accent2: 青色系 -->
            <Color x:Key="Accent2Color">#4ECDC4</Color>
            <SolidColorBrush x:Key="Accent2Brush" Color="#4ECDC4"/>

            <!-- Accent3: 蓝色系 -->
            <Color x:Key="Accent3Color">#45B7D1</Color>
            <SolidColorBrush x:Key="Accent3Brush" Color="#45B7D1"/>

            <!-- Accent4: 绿色系 -->
            <Color x:Key="Accent4Color">#96CEB4</Color>
            <SolidColorBrush x:Key="Accent4Brush" Color="#96CEB4"/>

            <!-- Accent5: 黄色系 -->
            <Color x:Key="Accent5Color">#FFEAA7</Color>
            <SolidColorBrush x:Key="Accent5Brush" Color="#FFEAA7"/>

            <!-- Accent6: 紫色系 -->
            <Color x:Key="Accent6Color">#DDA0DD</Color>
            <SolidColorBrush x:Key="Accent6Brush" Color="#DDA0DD"/>

            <!-- ============================================================ -->
            <!-- 边框色 - Border                                                -->
            <!-- ============================================================ -->
            <Color x:Key="BorderColor">#2A2A2A</Color>
            <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>

            <Color x:Key="BorderLightColor">#3A3A3A</Color>
            <SolidColorBrush x:Key="BorderLightBrush" Color="#3A3A3A"/>

            <Color x:Key="BorderFocusColor">#1E90FF</Color>
            <SolidColorBrush x:Key="BorderFocusBrush" Color="#1E90FF"/>

            <!-- ============================================================ -->
            <!-- 其他颜色 - Miscellaneous                                       -->
            <!-- ============================================================ -->
            <SolidColorBrush x:Key="ScrollbarBrush" Color="#3A3A3A"/>
            <SolidColorBrush x:Key="ScrollbarHoverBrush" Color="#4A4A4A"/>
            <SolidColorBrush x:Key="ShadowBrush" Color="#80000000"/>
            <SolidColorBrush x:Key="OverlayBrush" Color="#60000000"/>

            <!-- ============================================================ -->
            <!-- 字体族 (3套) - Font Family                                     -->
            <!-- ============================================================ -->
            <!-- FontPrimary: 主字体 -->
            <FontFamily x:Key="FontPrimary">Segoe UI, Microsoft YaHei, sans-serif</FontFamily>

            <!-- FontSecondary: 备用字体 -->
            <FontFamily x:Key="FontSecondary">Arial, Helvetica, sans-serif</FontFamily>

            <!-- FontMono: 等宽字体 -->
            <FontFamily x:Key="FontMono">Consolas, Microsoft YaHei Mono, monospace</FontFamily>

            <!-- ============================================================ -->
            <!-- 字号 - Font Size                                               -->
            <!-- ============================================================ -->
            <sys:Double x:Key="FontSizeXs">10</sys:Double>
            <sys:Double x:Key="FontSizeSm">12</sys:Double>
            <sys:Double x:Key="FontSizeMd">14</sys:Double>
            <sys:Double x:Key="FontSizeLg">16</sys:Double>
            <sys:Double x:Key="FontSizeXl">20</sys:Double>
            <sys:Double x:Key="FontSize2xl">24</sys:Double>
            <sys:Double x:Key="FontSize3xl">32</sys:Double>

            <!-- ============================================================ -->
            <!-- 字重 - Font Weight                                             -->
            <!-- ============================================================ -->
            <FontWeight x:Key="FontWeightLight">Light</FontWeight>
            <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
            <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
            <FontWeight x:Key="FontWeightSemibold">SemiBold</FontWeight>
            <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

            <!-- ============================================================ -->
            <!-- 行高 - Line Height                                             -->
            <!-- ============================================================ -->
            <sys:Double x:Key="LineHeightTight">1.25</sys:Double>
            <sys:Double x:Key="LineHeightNormal">1.5</sys:Double>
            <sys:Double x:Key="LineHeightRelaxed">1.75</sys:Double>

            <!-- ============================================================ -->
            <!-- 尺寸 - Dimensions                                              -->
            <!-- ============================================================ -->
            <!-- 圆角 -->
            <CornerRadius x:Key="BorderRadius">4</CornerRadius>
            <CornerRadius x:Key="BorderRadiusLarge">8</CornerRadius>

            <!-- 边框 -->
            <sys:Double x:Key="BorderWidth">1</sys:Double>
            <Thickness x:Key="BorderThickness">1</Thickness>

            <!-- 间距 -->
            <sys:Double x:Key="Spacing">8</sys:Double>
            <sys:Double x:Key="SpacingSmall">4</sys:Double>
            <sys:Double x:Key="SpacingLarge">16</sys:Double>

            <!-- 按钮 -->
            <sys:Double x:Key="ButtonHeight">32</sys:Double>
            <sys:Double x:Key="ButtonHeightSmall">24</sys:Double>
            <sys:Double x:Key="ButtonHeightLarge">40</sys:Double>
            <Thickness x:Key="ButtonPadding">16,8</Thickness>

            <!-- 输入框 -->
            <sys:Double x:Key="InputHeight">32</sys:Double>
            <Thickness x:Key="InputPadding">10,6</Thickness>

            <!-- 标题栏 -->
            <sys:Double x:Key="TitleBarHeight">32</sys:Double>

        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        
    </Grid>
</Window>
